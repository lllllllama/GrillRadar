# LLM API Keys (至少配置一个)

# 方式1: 使用官方Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 方式2: 使用兼容的第三方服务 (如BigModel/智谱AI)
# ANTHROPIC_AUTH_TOKEN=your_auth_token_here
# ANTHROPIC_BASE_URL=https://open.bigmodel.cn/api/anthropic

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# LLM配置
DEFAULT_LLM_PROVIDER=anthropic  # anthropic | openai
DEFAULT_MODEL=claude-sonnet-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=16000
LLM_TIMEOUT=120

# 应用配置
APP_NAME=GrillRadar
APP_VERSION=1.0.0
DEBUG=False

# 外部信息源配置
# mock: 使用模拟数据（快速，无需网络）
# multi_source_crawler: 使用真实爬虫（GitHub + CSDN）
EXTERNAL_INFO_PROVIDER=mock

# 多源爬虫配置（仅在使用multi_source_crawler时生效）
CRAWLER_MAX_ITEMS=20                # 每个源最多抓取条目数
CRAWLER_TIMEOUT=10                  # 请求超时（秒）
CRAWLER_SLEEP=1.0                   # 请求间隔（秒）
CRAWLER_USE_CACHE=true              # 是否使用缓存
