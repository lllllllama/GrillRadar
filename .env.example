# LLM API Keys (至少配置一个)

# 方式1: 使用官方Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 方式2: 使用兼容的第三方服务 (如BigModel/智谱AI)
# ANTHROPIC_AUTH_TOKEN=your_auth_token_here
# ANTHROPIC_BASE_URL=https://open.bigmodel.cn/api/anthropic

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# LLM配置
DEFAULT_LLM_PROVIDER=anthropic  # anthropic | openai
DEFAULT_MODEL=claude-sonnet-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=16000
LLM_TIMEOUT=120

# 应用配置
APP_NAME=GrillRadar
APP_VERSION=1.0.0
DEBUG=False

# 外部信息源配置
# mock: 使用模拟数据（快速，无需网络）
# multi_source_crawler: 使用真实爬虫（GitHub + CSDN）
EXTERNAL_INFO_PROVIDER=mock

# 多源爬虫配置（仅在使用multi_source_crawler时生效）
CRAWLER_MAX_ITEMS=20                # 每个源最多抓取条目数
CRAWLER_TIMEOUT=10                  # 请求超时（秒）
CRAWLER_SLEEP=1.0                   # 请求间隔（秒）
CRAWLER_USE_CACHE=true              # 是否使用缓存

# PDF OCR配置（可选，用于扫描版PDF简历）
# 需要先安装: pip install -r requirements-ocr.txt
PDF_OCR_ENABLED=true                # 启用OCR支持
PDF_OCR_FORCE=false                 # 强制使用OCR（即使PDF可直接提取文本）
PDF_OCR_MIN_TEXT=200                # 触发OCR的最小文本长度
PDF_OCR_ENGINE=paddleocr            # OCR引擎: paddleocr | tesseract
PDF_OCR_LANG=ch                     # 语言: ch（中文）| en（英文）| ch_en（混合）
PDF_OCR_USE_GPU=false               # 使用GPU加速（需要GPU版本的依赖）
PDF_OCR_SHOW_LOG=false              # 显示OCR处理日志
PDF_OCR_DPI=200                     # PDF转图片的DPI（越高越清晰但越慢）
